{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "baseUrl": "./",
    "paths": {
      "calculator": ["./src/Calculator.js"]
    },
    "declaration": false
  },
  "include": ["./src/**/*", "./test/unit/**/*"],
  "exclude": ["node_modules", "dist", "tasks"],
  "typedocOptions": {
    "entryPoints": ["./src/*.ts"],
    "excludePrivate": false,
    "excludeProtected": true,
    "disableSources": true,
    "categorizeByGroup": false,
    "sort": ["static-first", "visibility"],
    "name": "Reactive Nodes",
    "hideGenerator": true
  }
}
